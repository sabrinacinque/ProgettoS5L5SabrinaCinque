@model ProgettoS5L5SabrinaCinque.Models.TipoViolazione

<h1>Modifica Tipo di Violazione</h1>

<form asp-action="Edit">
    <div class="form-group">
        <input type="hidden" asp-for="IdViolazione" />
        <label asp-for="Descrizione" class="control-label"></label>
        <input asp-for="Descrizione" class="form-control" />
        <span asp-validation-for="Descrizione" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Importo" class="control-label"></label>
        <input asp-for="Importo" class="form-control" />
        <span asp-validation-for="Importo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DecurtamentoPunti" class="control-label"></label>
        <input asp-for="DecurtamentoPunti" class="form-control" />
        <span asp-validation-for="DecurtamentoPunti" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salva</button>
</form>
